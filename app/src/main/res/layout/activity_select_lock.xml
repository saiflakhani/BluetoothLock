<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iVQSLogo"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/qs" />

    <TextView
        android:id="@+id/tVLockListHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iVQSLogo"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:textColor="#000"
        android:gravity="center"
        android:text="Bluetooth - based secure lock system\n\nSelect your lock below" />

    <ListView
        android:id="@+id/lVLockList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tVLockListHeader"
        android:padding="16dp" />



</RelativeLayout>
